.main
  .main-top
    .main-top--title
      test
    .main-top--button-edit
      Edit
    .main-top--info
      Member：test1111

  .main-midle
    .main-midle--upper-inner
      .main-midle--upper-inner_name
        = message.user.name
      .main-midle--upper-inner_time
        = message.created_at.strftime("%Y/%m/%d %H:%M")
    .main-midle--lower-inner
      - if message.content.present?
      %p.main-midle--lower-inner__comment
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?


  %form.main-bottom{:action => "/", :method => "post"}
    %input.main-bottom--form{:type => "text", :name => "name", :placeholder => "type a message"}
    %button.main-bottom--img
      =fa_icon("image")
    %input.main-bottom--button-send{:type => "submit", :value => "送信"}


